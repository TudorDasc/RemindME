<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search_elderly">

    <ListView
        android:id="@+id/list_elderlys"
        android:layout_width="match_parent"
        android:layout_height="500sp"
        android:layout_below="@+id/description_text6"
        android:layout_marginTop="20dp"
        android:choiceMode="singleChoice"
        app:layout_constraintTop_toBottomOf="@+id/description_text6"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/description_text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:text="Search elderly person"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</RelativeLayout>